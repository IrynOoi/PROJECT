<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2">

    <!-- ================= APP BAR ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/customAppBar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#3F51B5"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageButton
                android:id="@+id/btnBackHistory"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                app:tint="@android:color/white"
                android:layout_marginStart="4dp"
                android:contentDescription="Back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:id="@+id/tvHistoryTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Prediction History"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@id/btnBackHistory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= CONTENT ================= -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/customAppBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Filter Label -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by Model:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>

        <!-- âœ… NORMAL SPINNER (SAME AS OTHER SCREEN) -->
        <Spinner
                android:id="@+id/spinnerFilterModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="16dp"/>

        <!-- ================= LIST AREA ================= -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp"/>


            <ProgressBar
                    android:id="@+id/progressBarHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/tvEmptyHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No history found"
                    android:textColor="#888888"
                    android:visibility="gone"/>
        </FrameLayout>

        <Button
                android:id="@+id/btnExportCsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export CSV"
                android:layout_margin="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
